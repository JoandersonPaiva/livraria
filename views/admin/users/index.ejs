<%- include('../../partials/header') %>
<%- include('../../partials/navbarAdmin') %>

<body>
    <div class="container">
        <hr>
        <h2>Users</h2>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Genero</th>
                    <th>Email</th>
                    <th>Level</th>
                    <th>Balance</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(userr => { %>
                <tr>
                    <td><%=userr.name %></td>
                    <td><%=userr.gen %></td>
                    <td><%=userr.email %></td>
                    <td><%=userr.level %></td>
                    <td>R$ <%=userr.balance %></td>

                    <td>
                        <a href="/admin/users/edit/<%=userr.name%>/<%=userr.id%>"class="btn btn-warning"> Editar</a>
                    </td>
                    
                </tr>
                <% }) %> 
    
            </tbody>
        </table>
    </div>
</body>
<%- include('../../partials/footer') %>