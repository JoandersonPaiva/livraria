<%- include('../partials/header') %>
<div class="container login-page" style="width: 20rem;">
    <form action="/login/verify" method="POST">
        <div class="card mt-5">
            <img src="/images/logo/logo.png" alt="" width="280px" height="60px">
            <div class="form-floating mt-3">
                <input type="email" class="form-control" name="email" id="floatingInput" placeholder=" ">
                <label for="floatingInput">Email address</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" name="password" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Password</label>
            </div>
            <div class="d-grid gap-2 d-md-block mt-3 mb-1 space" >
                <button class="btn btn-success" type="submit">Login</button>
                <a class="btn btn-primary" type="button" href="/create" style="float: right;">Create</a>
            </div>
        </div>
    </form>

</div>
